<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:padding="16dp"
              android:elevation="4dp"
              android:background="@drawable/rounded_rectangle">

    <TextView
        android:id="@+id/item_totalPrice_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="19sp"
        tools:text="5000P"/>

    <TextView
        android:id="@+id/item_initialPrice_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_name_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="13sp"
        tools:text="1000P"/>

    <TextView
        android:id="@+id/item_count_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_initialPrice_textView"
        android:layout_toRightOf="@id/item_initialPrice_textView"
        android:layout_toEndOf="@id/item_initialPrice_textView"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:textSize="12sp"
        tools:text="x5"/>



    <TextView
        android:id="@+id/item_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/item_totalPrice_textView"
        android:layout_toStartOf="@id/item_totalPrice_textView"
        android:textSize="20sp"
        tools:text="Speech Training Lesson"/>

</RelativeLayout>
