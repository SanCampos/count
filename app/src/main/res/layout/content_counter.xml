<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_counter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.CounterActivity">


    <Button
        android:id="@+id/wallet_totalMoney"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="23sp"
        android:background="@drawable/rounded_rectangle"
        tools:text="10000"/>

    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:layout_below="@id/wallet_totalMoney">

        <FrameLayout
            android:id="@+id/fragment_container_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wrapper">
    </FrameLayout>

</RelativeLayout>