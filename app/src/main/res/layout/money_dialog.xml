<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/amt_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:text="@string/amt_for_day"/>

    <TextView
        android:id="@+id/money_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/amt_label"
        android:layout_toEndOf="@id/amt_label"
        android:textStyle="bold"
        tools:text="500P"/>

    <TextView
        android:id="@+id/balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/amt_label"
        android:text="@string/balance_label"/>

    <TextView
        android:id="@+id/balance_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/amt_label"
        android:layout_alignLeft="@id/money_amt"
        android:textStyle="bold"
        android:text="@string/balance_label"
        tools:text="245.50P"/>
</RelativeLayout>