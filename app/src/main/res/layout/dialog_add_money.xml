<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText_addMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:inputType="numberDecimal"
        android:maxLength="8"
        android:hint="@string/hint_addMoney"/>

    <CheckBox
        android:id="@+id/checkBox_AddMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_addMoney"
        android:layout_alignLeft="@id/editText_addMoney"
        android:layout_alignStart="@id/editText_addMoney"
        android:text="@string/dialog_addOrSet"/>
</RelativeLayout>